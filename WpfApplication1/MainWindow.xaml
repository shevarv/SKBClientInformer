<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfScbClientInformer"
        xmlns:SKBClientInformerNamespace="clr-namespace:ShevarvProject.SKBClientInformerNamespace;assembly=SKBClientInformer" x:Class="WpfScbClientInformer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <DataGrid x:Name="CbUserGrid" HorizontalContentAlignment="Stretch" Margin="0,0,0,39">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="OkButton" Content="Пошук" Margin="224,0,218,5" Width="75" Height="19" IsDefault="True" ToolTip="Натисни щоб знайти" AllowDrop="True" Click="OkButton_Click" VerticalAlignment="Bottom"/>
        <ProgressBar Height="10" Margin="0,0,0,29" VerticalAlignment="Bottom" Foreground="#FF017DD3" HorizontalContentAlignment="Stretch"/>

    </Grid>
</Window>
